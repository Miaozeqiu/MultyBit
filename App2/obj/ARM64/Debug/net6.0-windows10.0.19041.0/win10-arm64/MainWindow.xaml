<Window x:ConnectionId='1'
    x:Class="BrowserLauncherApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Browser Launcher"

    x:Name="mainWindow">

    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Port:" />
            <TextBox x:ConnectionId='2' x:Name="PortTextBox" Margin="0,0,0,10" 
                                                                               />

            <TextBlock Text="Folder Name:" />
            <TextBox x:ConnectionId='3' x:Name="FolderTextBox" Margin="0,0,0,10" 
                                                                               />

            <TextBlock Text="Browser:" />
            <ComboBox x:ConnectionId='4' x:Name="BrowserComboBox" Margin="0,0,0,10"                                >
                <ComboBoxItem Content="Chrome" />
                <ComboBoxItem Content="Edge" />
            </ComboBox>

            <Button x:ConnectionId='5' Content="Launch Browser"                                   />
        </StackPanel>
    </Grid>
</Window>

