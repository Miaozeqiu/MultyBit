<Page x:ConnectionId='1'
x:Class="BrowserLauncherApp.HomePage"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
mc:Ignorable="d"

x:Name="mainWindow">
    <Grid HorizontalAlignment="Stretch">
        <StackPanel HorizontalAlignment="Stretch" Margin="15">
            <Grid Height="60">
                <TextBlock Text="Port:" />
                <TextBox x:ConnectionId='6' x:Name="PortTextBox" Margin="0,25,0,0" Width="200" HorizontalAlignment="Left"
                                                                          />

            </Grid>
            <Grid Height="70">
                <TextBlock Text="Folder Name:" Height="60"/>
                <TextBox x:ConnectionId='5' x:Name="FolderTextBox" Margin="0,25,0,10" Width="200" HorizontalAlignment="Left"
                                                                           />
            </Grid>
            <Grid Height="70">
                <TextBlock Text="URL"/>
                <TextBox x:ConnectionId='4' x:Name="URLTextBox" Margin="0,25,0,10" Width="200" HorizontalAlignment="Left"
                                                               />
            </Grid>
            <Grid Height="70">
                <TextBlock Text="Browser:" Height="60"/>
                <ComboBox x:ConnectionId='3' x:Name="BrowserComboBox" Margin="0,25,0,10"                                >
                    <ComboBoxItem Content="Chrome" />
                    <ComboBoxItem Content="Edge" />
                </ComboBox>
            </Grid>

            <Button x:ConnectionId='2' Content="Launch Browser"                                   />
        </StackPanel>
    </Grid>
</Page>

