<Page x:ConnectionId='1'
    x:Class="BrowserLauncherApp.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BrowserLauncherApp"
    xmlns:winui="using:Microsoft.UI.Xaml.Controls">


    <ScrollViewer>
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="20">
            <StackPanel HorizontalAlignment="Stretch">
                <TextBlock Text="浏览器路径"
                       FontSize="30"
                       Margin="0,10,0,0"
                       
                       />

                <Border Background="WhiteSmoke" CornerRadius="5" Margin="0,5,0,0">
                    <StackPanel HorizontalAlignment="Stretch" Margin="10,0,10,0">
                        <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Margin="0,0,0,5">
                            <Grid Background="WhiteSmoke" Height="50">
                                <Grid Width="60" Margin="0,0,0,0" HorizontalAlignment="Left">
                                    <TextBlock x:ConnectionId='27' x:Name="EdgePathOP"
                            Grid.Column="0" Text="EdgePath" VerticalAlignment="Center"
                                                                             
                                                                             
                                                                           />
                                </Grid>
                                <Grid Margin="0,0,100,0">
                                    <TextBlock x:ConnectionId='25' x:Name="EdgebPath"
                                        Text="C:\Users\Administrator\project\program"
                                        VerticalAlignment="Center"
                                        Foreground="Gray"
                                        Margin="100,0,0,0"
                                                                                />

                                    <TextBox x:ConnectionId='26' x:Name="EdgexPath"
                                                                                   
                                        VerticalAlignment="Center"
                                        Visibility="Collapsed"
                                        Margin="100,0,0,0"
                                                                   
                                                                      />
                                </Grid>
                                <Button x:ConnectionId='24' Grid.Column="2" Content="Select File" HorizontalAlignment="Right"                                   />
                            </Grid>
                        </Border>

                        <Grid Background="WhiteSmoke" Height="50">
                            <Grid Width="80" HorizontalAlignment="Left">

                                <TextBlock x:ConnectionId='23' x:Name="ChromePathOP"
                            Grid.Column="0" Text="ChromePath" VerticalAlignment="Center"
                                                                               
                                                                               
                                                                             />
                            </Grid>
                            <Grid Margin="0,0,100,0">
                                <TextBlock x:ConnectionId='21' x:Name="ChromebPath"
                                    Text="C:\Users\Administrator\project\program"
                                    VerticalAlignment="Center"
                                    Foreground="Gray"
                                    Margin="100,0,0,0"
                                                                              />

                                <TextBox x:ConnectionId='22' x:Name="ChromexPath"
                                                                                 
                                    VerticalAlignment="Center"
                                    Visibility="Collapsed"
                                    Margin="100,0,0,0"
                                                                  
                                                                    />

                            </Grid>
                            <Button x:ConnectionId='20' Grid.Column="2" Content="Select File" HorizontalAlignment="Right"                                     />
                        </Grid>
                    </StackPanel>
                </Border>

                <TextBlock Text="浏览器配置"
                       FontSize="30"
                       Margin="0,20,0,0"
           />

                <Border Background="WhiteSmoke" CornerRadius="5" Margin="0,5,0,0">
                    <StackPanel HorizontalAlignment="Stretch" Margin="10,0,10,0">
                        <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Margin="0,0,0,5">
                            <Grid Background="WhiteSmoke" Height="50">
                                <Grid Width="60" HorizontalAlignment="Left">
                                    <TextBlock x:ConnectionId='19' x:Name="EdgedbPathOP" Grid.Column="0" Text="EdgePath" VerticalAlignment="Center"
                                                                                   
                                                                                   
                                                                                 />
                                </Grid>
                                <Grid Margin="0,0,100,0">
                                    <TextBlock x:ConnectionId='17' x:Name="EdgedbPath"
                            Text="C:\Users\Administrator\project\program"
                            VerticalAlignment="Center"
                            Foreground="Gray"
                            Margin="100,0,0,0"
                                                                     />

                                    <TextBox x:ConnectionId='18' x:Name="EdgedxPath"
                                                                        
                            VerticalAlignment="Center"
                            Visibility="Collapsed"
                            Margin="100,0,0,0"
                                                        
                                                           />
                                </Grid>
                                <Button x:ConnectionId='16' Grid.Column="2" Content="Select File" HorizontalAlignment="Right"                                    />
                            </Grid>
                        </Border>

                        <Grid Background="WhiteSmoke" Height="50">
                            <Grid Width="80" HorizontalAlignment="Left">
                                <TextBlock x:ConnectionId='15' x:Name="ChromedPathOP"
                            Grid.Column="0" Text="ChromePath" VerticalAlignment="Center"
                                                                                
                                                                                
                                                                              />
                            </Grid>

                            <Grid Margin="0,0,100,0">
                                <TextBlock x:ConnectionId='13' x:Name="ChromedbPath"
                        Text="C:\Users\Administrator\project\program"
                        VerticalAlignment="Center"
                        Foreground="Gray"
                        Margin="100,0,0,0"
                                                                   />

                                <TextBox x:ConnectionId='14' x:Name="ChromedxPath"
                                                                      
                        VerticalAlignment="Center"
                        Visibility="Collapsed"
                        Margin="100,0,0,0"
                                                      
                                                         />

                            </Grid>
                            <Button x:ConnectionId='12' Grid.Column="2" Content="Select File" HorizontalAlignment="Right"                                      />
                        </Grid>
                    </StackPanel>
                </Border>
                <Grid HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,20,0,0" HorizontalAlignment="Right">
                    <Button x:ConnectionId='11' Content="Add"                         Margin="5" HorizontalAlignment="Right"/>
                        
                    </StackPanel>
                </Grid>




                <Border Background="WhiteSmoke" CornerRadius="5" Margin="0,0,0,0">
                    
                    <Grid>
                        <StackPanel>
                            
                                <Grid Margin="15,0,0,0">
                                <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Margin="0,0,0,0">
                                    <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                                        <TextBlock Text="网站名称" VerticalAlignment="Center"/>
                                        <TextBlock Text="网址" VerticalAlignment="Center" Margin="130,0,0,0" Foreground="Gray"/>
                                        
                                    </StackPanel>
                                    </Border>
                                </Grid>
                            
                            <ListView x:ConnectionId='2' x:Name="WebsiteListView" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SelectionMode="None" Margin="0,0,0,0">
                                <ListView.ItemTemplate>
                                    <DataTemplate                           >
                                        <Border x:ConnectionId='4' CornerRadius="5" HorizontalAlignment="Stretch" Margin="-8,10,-5,0">
                                            <StackPanel x:ConnectionId='5'                                            Margin="0,0,0,0"                                          VerticalAlignment="Center" Orientation="Horizontal">

                                                <Grid HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3,0,0,0" Height="40" Width="180">
                                                    <TextBlock x:ConnectionId='8' x:Name="WebsiteNameBlock" Grid.Column="0"                                                                     VerticalAlignment="Center"/>
                                                    <TextBox x:ConnectionId='9' x:Name="WebsiteNameBox"
                                                                         
                                        Height="30"
                                        Visibility="Collapsed"

                                                                           
                                        Width="180"
                                         HorizontalAlignment="Left"
                                                         />
                                                </Grid >
                                                <Grid Margin="10,0,0,0" VerticalAlignment="Center" Height="40">
                                                    <TextBlock x:ConnectionId='6' x:Name="UrlPathBlock" Grid.Column="1"                                   Foreground="Gray"                              Margin="0,0,0,0" VerticalAlignment="Center"/>
                                                    <TextBox x:ConnectionId='7' x:Name="UrlPathBox"
                                                                        
                                        VerticalAlignment="Center"
                                        Visibility="Collapsed"
                                        Margin="0,0,0,0"
                                                                       
                                        Width="400"
                                             HorizontalAlignment="Left"/>
                                                </Grid>



                                                <StackPanel.ContextFlyout>
                                                    <MenuFlyout>
                                                        <MenuFlyoutItem x:ConnectionId='10' Text="Delete"                         />
                                                    </MenuFlyout>
                                                </StackPanel.ContextFlyout>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </Grid>
                </Border>



            </StackPanel>



        </Grid>
    </ScrollViewer>
</Page>


