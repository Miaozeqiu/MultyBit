<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="BrowserLauncherApp.ProcessesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:BrowserLauncherApp"
    mc:Ignorable="d"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch">
    <ScrollViewer>
        
            <Grid>
                <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:ConnectionId='21' 
                        x:Name ="EdgeOptionButton"
                        Text="Edge" 
                        FontSize="30" 
                        Margin="10,30,0,0"
                        Foreground="Black"
                                                                
                                                                
                                                              />

                    <TextBlock x:ConnectionId='22'
                        x:Name ="ChromeOptionButton"
                        Text="Chrome" 
                        FontSize="30"
                        Margin="10,30,0,0"
                        Foreground="LightGray"
                                                                  
                                                                  
                                                                />                
                </StackPanel>
                <Border Background="WhiteSmoke" CornerRadius="5" Margin="10,5,15,0">
                        <Grid>
                            <StackPanel Margin="10,5,0,0" HorizontalAlignment="Stretch" >

                                <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Margin="0,0,0,5">
                                    <Grid HorizontalAlignment="Stretch">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="10,5,0,40">
                                        <TextBlock Text="已选择:" FontSize="20" VerticalAlignment="Bottom" Foreground="Black"/>
                                        <TextBlock x:ConnectionId='20' x:Name="selectionCountTextBlock" FontSize="20" VerticalAlignment="Bottom" Margin="5,0,0,0" Foreground="Gray"/>
                                    </StackPanel>
                                    <Grid Margin="230,5,5,4" HorizontalAlignment="Right">
                                        <ComboBox x:ConnectionId='19' x:Name="BrowserComboBox" Margin="0,0,0,0"                                                    >
                                            
                                        </ComboBox>
                                    </Grid >
                                    <Button x:ConnectionId='15' Grid.Column="1" Content="Add"                      Margin="0,5,5,4" HorizontalAlignment="Right" VerticalAlignment="Top"/>

                                    <Button x:ConnectionId='16' Grid.Column="2" Content="Select 5 Items"                                Margin="0,5,82,4" HorizontalAlignment="Right" VerticalAlignment="Top"/>

                                    

                                    <Button x:ConnectionId='17' Grid.Column="4" Content="Launch"                            Margin="0,5,10,4" HorizontalAlignment="Right" VerticalAlignment="Top"/>
                                    <Grid Margin="10,30,0,0">
                                        <StackPanel Orientation="Horizontal">
                                            <Grid Width=" 25">
                                                <CheckBox x:ConnectionId='18' x:Name="SelectAllBox"                                                            />
                                            </Grid>
                                            <TextBlock Text="名称" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="35,0,0,0"/>
                                            <TextBlock Text="端口" Foreground="Gray" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="47,0,0,0"/>
                                            <TextBlock  Text="备注" Foreground="Gray" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="79,0,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                                    

                                </Border>
                                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="-13,0,15,0">

                                <ListView x:ConnectionId='2' x:Name="myListView" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" SelectionMode="None"                                     >
                                    <ListView.ItemTemplate>
                                        <DataTemplate                        >
                                            <Border x:ConnectionId='4' CornerRadius="5" Margin="0,0,-10,5">
                                                <StackPanel x:ConnectionId='5' Orientation="Horizontal" Margin="0,0,0,0" Height="40" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                                                                                                            VerticalAlignment="Center" HorizontalAlignment="Stretch">
                                                    <StackPanel.ContextFlyout>
                                                        <MenuFlyout>
                                                            <MenuFlyoutItem x:ConnectionId='6' Text="删除"                         />
                                                            <MenuFlyoutItem x:ConnectionId='7' Text="桌面快捷方式"                             />
                                                        </MenuFlyout>
                                                    </StackPanel.ContextFlyout>
                                                    <Grid Padding="0,0,0,0" Width="30">
                                                        <CheckBox x:ConnectionId='14' x:Name="checkbox"                                              Margin="8,0,0,0"
                                                                                                                                                  VerticalAlignment="Center"/>
                                                    </Grid>
                                                    <Grid Width="220">
                                                        <TextBlock x:ConnectionId='12' x:Name="nameBlock"                      FontSize="16" Width="90" Margin="-120,0,0,0"                                        VerticalAlignment="Center" TextAlignment="Center"/>
                                                        <TextBox x:ConnectionId='13' x:Name="nameBox"                       Margin="-120,0,0,0" Width="50" Visibility="Collapsed"                               VerticalAlignment="Center"/>
                                                        </Grid>
                                                    <Grid Width="100" Margin="-100,0,0,0">
                                                        <TextBlock x:ConnectionId='10' Width="60" x:Name="portBlock"                       FontSize="14" Foreground="Gray"                                        Margin="-90,0,0,0" VerticalAlignment="Center" TextAlignment="Center"/>
                                                        <TextBox x:ConnectionId='11' x:Name="portBox"                      FontSize="14" Margin="-60,0,0,0" Width="60" Visibility="Collapsed"                                VerticalAlignment="Center" MaxLength ="5">
                                                        </TextBox>
                                                    </Grid>
                                                    <StackPanel VerticalAlignment="Center">
                                                        <TextBlock x:ConnectionId='8' x:Name="describeBlock"                              FontSize="14" Foreground="Gray"                                               Margin="0,0,0,0" VerticalAlignment="Center"/>
                                                        <TextBox x:ConnectionId='9' x:Name="describeBox"                             FontSize="14" Margin="-10,0,0,0"  Visibility="Collapsed"                                   />
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
            
            </Grid>

    </ScrollViewer>
</Page>

