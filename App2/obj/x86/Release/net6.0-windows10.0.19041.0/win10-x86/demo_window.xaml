<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="App2.demo_window"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="using:BrowserLauncherApp"
    mc:Ignorable="d">

    <Grid>
        <ListView x:ConnectionId='2' x:Name="myListView" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate                        >
                    <Border x:ConnectionId='4' CornerRadius="5">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0" Height="40" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                             VerticalAlignment="Center">
                            <CheckBox x:ConnectionId='5' x:Name="checkbox"                                              Margin="8,0,0,0"
                                VerticalAlignment="Center"/>
                            <Grid>
                                <Grid>
                                    <TextBlock x:ConnectionId='7' x:Name="nameBlock"                      FontSize="16" Margin="-70,0,0,0"  VerticalAlignment="Center"/>
                                    <TextBox x:ConnectionId='8' x:Name="nameBox"                      Margin="-180,5,0,0" Width="180" Visibility="Collapsed"  VerticalAlignment="Center"/>
                                </Grid>
                                <TextBlock x:ConnectionId='6'                             FontSize="14" Foreground="Gray" Margin="100,0,0,0" VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ContextFlyout>
                <MenuFlyout x:ConnectionId='9' x:Name="itemMenuFlyout">
                    <MenuFlyoutItem Text="Launch"/>
                    <MenuFlyoutItem Text="Create shortcut"/>
                    <MenuFlyoutItem x:ConnectionId='10' Text="Delete"                         />
                </MenuFlyout>
            </ListView.ContextFlyout>
        </ListView>

    </Grid>
</Window>

